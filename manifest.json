{
  "manifest_version": 3,
  "name": "Sniffer-M3U8",
  "version": "1.1",
  "description": "Detecta e exporta URLs de v√≠deo HLS (.m3u8) em qualquer site.",
  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}